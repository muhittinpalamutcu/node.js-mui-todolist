<!DOCTYPE html>
<html lang="en" dir="ltr">
<head>
  <meta charset="utf-8">
  <title>Mui-todolist</title>
  <style>
    body {
      text-align: center;
      background-image: url("https://w.wallhaven.cc/full/yj/wallhaven-yjvgxx.jpg");
    }
  </style>
</head>
<body onload="startTime()">
  <h1 id="clock" style="color: white;margin-top: 10%;font-size: 14em;"></h1>
</body>
<script>
  function startTime() {
    var today = new Date();
    var h = today.getHours();
    var m = today.getMinutes();
    var s = today.getSeconds();
    m = checkTime(m);
    s = checkTime(s);
    document.getElementById("clock").innerHTML =
      h + ":" + m + ":" + s;
    var t = setTimeout(startTime, 500);
  }
  function checkTime(i) {
    if (i < 10) {
      i = "0" + i
    }; // add zero in front of numbers < 10
    return i;
  }
</script>
</html>
